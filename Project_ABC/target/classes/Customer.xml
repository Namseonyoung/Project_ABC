<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		
<mapper namespace="Customer">	
	
    <!-- 조회결과를 Customer 클래스의 어떤 속성에 대입할지 설정 -->
	<resultMap type="Customer" id="CustomerResult">
		<result property="id" column="id" />
		<result property="password" column="password" />
		<result property="name" column="name" />
		<result property="address" column="address" />
		<result property="phone" column="phone" />
		<result property="zipcode" column="zipcode" />
		<result property="deptno" column="deptno" />			
	</resultMap>
	<!-- 
		아이디가 일치하는 회원정보를 조회
		실행할 쿼리 :
		  select id,password,name,address,phone,zipcode
		  from tb_customer where id=#{id}
	 -->
	<select id="selectCustomerById" resultMap="CustomerResult">
		<![CDATA[
			select id,password,name,address,phone,zipcode
			from tb_customer where id=#{id}
		]]>
	</select>
	
	<!-- tb_customer 테이블에 회원 정보 추가
		실행 쿼리		
		insert into tb_customer (id,password,name,phone,zipcode,address,deptno)
		values (#{id},#{password},#{name},#{phone},#{zipcode},#{address},#{deptno})
	-->
	<insert id="insertCustomer" parameterType="Customer">
		<![CDATA[
			insert into tb_customer (id,password,name,phone,zipcode,address,deptno)
			values (#{id},#{password},#{name},#{phone},#{zipcode},#{address},#{deptno})
		]]>
	</insert>
	
</mapper>













